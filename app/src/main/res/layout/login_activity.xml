<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img2_login"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back, let's get started!"
        android:textSize="18sp"
        android:textColor="@color/Royal_blue"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/LoginTextInputLayoutStyle"
        android:theme="@style/LoginTextInputLayoutStyle"
        app:boxBackgroundColor="#F8FBFB"
        app:boxStrokeErrorColor="#FA5252"
        android:id="@+id/username_text_input_layout"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        app:hintTextColor="@color/Royal_blue"
        android:textColorHint="@color/Royal_blue"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvuserName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_text"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/LoginTextInputLayoutStyle"
        android:theme="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        app:boxBackgroundColor="#F8FBFB"
        app:hintTextColor="@color/Royal_blue"
        android:textColorHint="@color/Royal_blue"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/tvpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textCursorDrawable="@drawable/cursor_color"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey_text"
        android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/Royal_blue"
        android:text="Login"
        android:gravity="center"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Donâ€™t have an account?"
        android:textSize="14sp"
        android:textColor="@color/dark_grey_text"
        android:gravity="right"
        android:fontFamily="@font/poppins_semibold"/>
        <TextView
            android:id="@+id/signinbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Register Now"
            android:textSize="14sp"
            android:textColor="@color/Royal_blue"
            android:gravity="left"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>


</LinearLayout>