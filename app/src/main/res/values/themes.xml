    <!-- Base application theme. -->
    <style name="Theme.AppCompat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:forceDarkAllowed">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--BottomSheetDialog-->
        <!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
        <item name="colorPrimary">#003962</item>
        <item name="colorPrimaryVariant">#F9BD15</item>
        <item name="colorPrimaryDark">#F9BD15</item>
        <item name="colorSecondary">#F9BD15</item>
        <item name="colorSecondaryVariant">#F9BD15</item>
        <item name='colorOnSecondary'>@color/white</item>
        <item name='colorOnPrimary'>@color/white</item>

