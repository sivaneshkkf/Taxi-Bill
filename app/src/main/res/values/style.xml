    <style name="roundedCornersImageView10dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedCornersImageView8dp" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="poppins_regular_400">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="inter_semibold_600">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="inter_medium_500">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="error_msg" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="DefaultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_searchbar</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultButtonStyle2" parent="DefaultButtonStyle">
        <item name="android:background">@drawable/shape_searchbar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">@color/white</item>
<!--        <item name="colorControlActivated">@color/colorPrimary</item>-->
    </style>



    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>



    <style name="PinkTintStyle">
        <item name="android:backgroundTint">@color/background_yellow</item>
    </style>

    <style name="GreyTintStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Edit_textbox">
        <item name="android:backgroundTint">@color/light_black</item>
        <item name="android:background">@drawable/background_small_curve</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>



    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@color/light_black</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RatingBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:scaleX">0.5</item> <!-- Adjust the scale to make stars smaller -->
        <item name="android:scaleY">0.5</item>
<!--        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>-->
    </style>
    <style name="roundedCornersImageView15">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item> <!-- Adjust the corner size as needed -->
    </style>

</resources>